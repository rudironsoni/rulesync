{
  "$schema": "https://opencode.ai/config.json",
  "lsp": false,
  "model": "opencode/glm-4.7",
  "agent": {
    "build": {
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true
      }
    }
  },
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--enable-web-dashboard",
        "false",
        "--project",
        "."
      ],
      "enabled": true,
      "environment": {}
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp",
      "enabled": true
    },
    "rulesync": {
      "type": "local",
      "command": [
        "pnpm",
        "dev",
        "mcp"
      ],
      "enabled": true,
      "environment": {}
    }
  },
  "share": "disabled"
}
